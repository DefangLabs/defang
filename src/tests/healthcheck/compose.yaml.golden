name: healthcheck
services:
  curl:
    healthcheck:
      test:
        - CMD
        - curl
        - -f
        - localhost
    image: curl
    networks:
      default: null
  flask1:
    healthcheck:
      test:
        - CMD
        - python
        - -c
        - import sys, urllib.request;urllib.request.urlopen(sys.argv[1]).read()
        - http://localhost/
    image: flask
    networks:
      default: null
  flask2:
    healthcheck:
      test:
        - CMD
        - python
        - -c
        - import urllib.request;urllib.request.urlopen('http://127.0.0.1/').read()
    image: flask
    networks:
      default: null
  wget:
    healthcheck:
      test:
        - CMD
        - wget
        - -q
        - --spider
        - localhost:5000
    image: alpine
    networks:
      default: null
networks:
  default:
    name: healthcheck_default
