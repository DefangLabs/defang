name: fixupenv
services:
  Mistral:
    image: mistral:latest
    networks:
      default: null
    ports:
      - mode: host
        target: 8000
        protocol: tcp
  fixup-args:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        API_URL: http://Mistral:8000
    networks:
      default: null
  ingress-service:
    image: somedb:latest
    networks:
      default: null
    ports:
      - mode: ingress
        target: 5432
        protocol: tcp
  refer-self-build-arg:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        CONFIG4: refer-self-env
    networks:
      default: null
  refer-self-env:
    environment:
      CONFIG3: refer-self-env
    image: service:latest
    networks:
      default: null
    ports:
      - mode: ingress
        target: 5678
        protocol: tcp
  ui:
    environment:
      API_URL: http://Mistral:8000
      SENSITIVE_DATA: null
    image: ui:latest
    networks:
      default: null
  use-ingress-service:
    environment:
      UI_URL: ingress-service:5432
    image: service:latest
    networks:
      default: null
networks:
  default:
    name: fixupenv_default
