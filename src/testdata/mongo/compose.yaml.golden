name: mongo
services:
  mongo:
    environment:
      MONGO_INITDB_ROOT_PASSWORD: example!
      MONGO_INITDB_ROOT_USERNAME: root
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb:
      allow-downtime: true
  mongo-express:
    depends_on:
      mongo:
        condition: service_started
        required: true
    environment:
      ME_CONFIG_BASICAUTH: "false"
      ME_CONFIG_MONGODB_ADMINPASSWORD: example!
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
      ME_CONFIG_MONGODB_URL: mongodb://root:example!@mongo:27017/
    image: mongo-express
    networks:
      default: null
    ports:
      - mode: ingress
        target: 8081
        published: "8081"
        protocol: tcp
    restart: always
  mongo-port1234:
    command:
      - --port
      - "1234"
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb: true
  mongo-port1235:
    command:
      - --port=1235
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb: true
  mongo-port1236:
    command:
      - --port
      - "1236"
      - --shardsvr
    image: mongo
    networks:
      default: null
    restart: always
  mongo-port1237:
    command:
      - --port=1237
      - --configsvr
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb: true
  mongo-port1238:
    command:
      - --shardsvr
      - --port
      - "1238"
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb: true
  mongo-port1239:
    command:
      - --configsvr
      - --port=1239
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb: true
  mongo-port27018:
    command:
      - --shardsvr
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb: true
  mongo-port27019:
    command:
      - --configsvr
    image: mongo
    networks:
      default: null
    restart: always
    x-defang-mongodb: true
  mongo-unmanaged:
    image: mongo
    networks:
      default: null
    restart: always
  mongo-wrong-image:
    image: example
    networks:
      default: null
    x-defang-mongodb: true
  short-ports:
    image: mongo
    networks:
      default: null
    ports:
      - mode: ingress
        target: 27017
        published: "27017"
        protocol: tcp
networks:
  default:
    name: mongo_default
