{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "outDir": "bin",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": false,
        "skipLibCheck": true,
        "stripInternal": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": ["mocha"]
      },
    "include": [
        "src/**/*",  // Specify files to be included in compilation
    ],
    "exclude": [
        "node_modules",  // Exclude the node_modules directory
        //"src/*.test.ts",  // Specify TypeScript declaration files to be included in compilation
        "test/*.spec.ts"  // Specify TypeScript declaration files to be included in compilation
]
}
