{
  "name": "defang",
  "version": "0.5.32",
  "author": "Defang Software Labs Inc.",
  "description": "CLI for the Defang Opinionated Platform",
  "license": "MIT",
  "type": "module",
  "bin": {
    "defang": "./bin/cli.js"
  },
  "keywords": [],
  "homepage": "https://github.com/DefangLabs/defang#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DefangLabs/defang.git"
  },
  "bugs": {
    "url": "https://github.com/DefangLabs/defang/issues"
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "module",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "/**/src/*.test.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.14",
    "https": "^1.0.0",
    "os": "^0.1.2",
    "tar": "^7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/adm-zip": "^0.5.5",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/tar": "^6.1.13",
    "axios": "^1.7.2",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.1",
    "typescript": "^5.5.3"
  },
  "main": "./bin/cli.js"
}
